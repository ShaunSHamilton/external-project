{
  "path": ".",
  "version": "0.1.0",
  "prepare": "sed -i 's#WD=/workspace/freeCodeCampOS#WD=$(pwd)#g' ./bash/.bashrc",
  "scripts": {
    "develop-course": "FCC_OS_PORT=8080 NODE_ENV=development npm run start",
    "run-course": "FCC_OS_PORT=8080 NODE_ENV=production && npm run start",
    "test": {
      "functionName": "handleMessage",
      "arguments": [
        {
          "message": "Hello World!",
          "type": "info"
        }
      ]
    }
  },
  "workspace": {
    "autoStart": true,
    "previews": [
      {
        "open": true,
        "url": "http://localhost:8080",
        "showLoader": true,
        "timeout": 4000
      }
    ]
  },
  "bash": {
    ".bashrc": "./bash/.bashrc",
    "sourcerer.sh": "./bash/sourcerer.sh"
  },
  "client": {
    "assets": {
      "header": "./client/assets/fcc_primary_large.svg",
      "favicon": "./client/assets/fcc_primary_small.svg"
    },
    "landing": {
      "description": "Placeholder description",
      "faq-link": "https://freecodecamp.org",
      "faq-text": "Link to FAQ related to course"
    },
    "static": {
      "/images": "./curriculum/images",
      "/script/injectable.js": "./client/injectable.js"
    }
  },
  "config": {
    "projects.json": "./config/projects.json",
    "state.json": "./config/state.json"
  },
  "curriculum": {
    "locales": {
      "english": "./curriculum/locales/english"
    }
  },
  "hotReload": {
    "ignore": [
      ".logs/.temp.log",
      "config/",
      "/node_modules/",
      ".git",
      "/target/",
      "/test-ledger/",
      ".vscode",
      "freecodecamp.conf.json"
    ]
  },
  "tooling": {
    "helpers": "./tooling/helpers.js",
    "plugins": "./tooling/plugins.js"
  }
}
